extends layout

include mixins/_bitForm
include mixins/_prompt

block content
  .inner
    h2.txt-light-green.flex-container-row.justify-center= title
    +bitForm(bit, {}, `/write/${bit._id}`)
    div.flex-container-row.justify-center
      .card-wrapper.card.card-full.flex-container-column.justify-space-around.flex-wrap.align-items-center
        +prompt()
